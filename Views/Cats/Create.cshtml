@model MongoBasedWeb.Models.Cats

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cats</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.ListBox("Friends", ViewBag.Friends as MultiSelectList)
                @Html.TextBox("AddFriends", "")
                <button type="button" class="btn btn-dark" onclick="AddToList()">Add friend from textbox</button>
            </div>
            <div class="form-group">
                @Html.DropDownList("attributeId", ViewBag.Attributes as List<SelectListItem>)
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/site.js"></script>
}
